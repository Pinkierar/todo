{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "#global": ["../../global"],
      "#controllers": ["controllers"],
      "#errors": ["errors"],
      "#entities/*": ["entities/*"],
      "#includes/*": ["includes/*"],
      "#middlewares": ["middlewares"],
      "#route": ["routes"],
      "#services": ["services"],
      "#transfers": ["transfers"],
      "#config": ["config"]
    },
    "rootDirs": ["./src", "../global"],
    "typeRoots": ["types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "strict": true,
    "skipLibCheck": true
  }
}
